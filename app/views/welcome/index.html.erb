<h1>Welcome to Snack Overflow</h1>

<%= form_tag("/questions/search", method:"get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<%= link_to "Ask a Question", new_question_path %>
<%= link_to "Browse Questions", questions_path %>
<%= link_to "Browse Users", users_path %>

<h3>Top Questions </h3>
<table>
  <% Question.top.each do |question| %>
    <tr>
      <td><%= link_to(question.title, [question.user, question])%></td>
      <td><%= link_to(question.user.username,question.user)%></td>
      <td><%= question.score %></td>
      <td><%= Time.at(question.created_at).to_time.strftime('%v %r').gsub(/^0/,"") %></td>
    </tr>
  <% end %>
</table>

