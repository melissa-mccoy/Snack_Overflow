<h1>Welcome to Snack Overflow</h1>

<%= form_tag("/questions/search", method:"get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<%= link_to "Ask a Question", new_question_path %>
<%= link_to "Browse Questions", questions_path %>
<%= link_to "Browse Users", users_path %>

<h3>Top Questions </h3>
<div class="top-questions">
  <% Question.all.each do |question| %>
    <ul class="question-item">
      <div class="question_title">
        <li class="question-category">Answers: <%= question.answers.count %></li>
        <li class="question-category">Score: <%= question.score %></li>
        <li class="question-category">Question: <%= question.title %></li>
      </div>
      <div>
        <li class="question-category">Asked By: <%= question.user.username %></li>
        <li class="question-category"><%= question.created_at.strftime("%F") %></li>
      </div>
    </ul>
  <% end %>
</div>

