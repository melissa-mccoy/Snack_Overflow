<% provide(:title, @user.name) %>

<div class = "current_user">
  <h1>
    <%= gravatar_for @user %>
    <%= @user.name %>
  </h1>
  <h3>
    <%= @user.email %>
  </h3>
  <%= link_to 'Edit My Profile', edit_user_path(@user.id), :class => "edit" %>
</div>
<hr>
<%= render 'edit' %>


<div class = "user_questions_outer">
  <div class = "user_questions_inner">
    <ul>
    <% @user.questions.each do |q| %>
      <li>
        <h2>
          <%=
          link_to(q.title, {controller: "questions", action: "show", id: q.id })
          %>
        </h2>
      </li>
      <li><%= q.body %></li>
    <% end %>
    </ul>
  </div>
</div>

